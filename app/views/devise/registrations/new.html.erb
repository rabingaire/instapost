
<div class="row">
  <div class="col-md-6 col-xs-12">
  	<div class="banner-image">
      <%= image_tag("imageinstapost.png", alt: 'Banner') %>
    </div>
  </div>
  <div class="col-md-4 col-xs-12 text-center signup-container">
  	<div class="signup-pannel">
  		<h2 class="logo-instapost">Instapost</h2>
  		<h4 class="info-signup">Sign up to see photos from your friends.</h4>

  		<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    		<%= devise_error_messages! %>
  
    		<div class="field">
      		<%= f.text_field :name, autofocus: true, class: 'input-form', placeholder: 'Full Name' %>
    		</div>

    		<div class="field">
      		<%= f.email_field :email, autofocus: true, class: 'input-form', placeholder: 'Email' %>
    		</div>

    		<div class="field">
      		<%= f.password_field :password, autocomplete: "off", class: 'input-form', placeholder: 'Password' %>
    		</div>

    		<div class="field">
      		<%= f.password_field :password_confirmation, autocomplete: "off", class: 'input-form', placeholder: 'Password Again' %>
    		</div>

    		<div class="field">
      		<%= f.label 'Profile Picture', class: 'label-instapost' %><br>
      		<%= f.file_field :photo %>
    		</div>
  
    		<div class="actions">
      		<%= f.submit "Sign up", class: 'signup-button' %>
    		</div>
  		<% end %>
  		<p class="bottom-signup-text">By signing up, you agree to our Terms & Privacy Policy.</p>
  	</div>
  	<div class="space"></div>
    <div class="other-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
  <div class="col-md-2 col-xs-12">

  </div>
</div>